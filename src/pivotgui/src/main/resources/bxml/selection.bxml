<controllers:SelectionController title="Select Flight" maximized="true"
                                 xmlns:controllers="ospp.pivotgui.controllers"
                                 xmlns:bxml="http://pivot.apache.org/bxml"
                                 xmlns="org.apache.pivot.wtk">
    <TablePane styles="{padding:10}">
        <columns>
            <TablePane.Column width="1*"/>
        </columns>

        <!-- HEADER -->
        <TablePane.Row height="100">
            <BoxPane styles="{verticalAlignment:'center'}">
                <Label bxml:id="headerLabel" text="Please select the two airports you want to travel between."
                       styles="{font:{bold:true, size:24}}"/>
            </BoxPane>
        </TablePane.Row>

        <!-- SELECTION LISTS -->
        <TablePane.Row height="1*">
            <TablePane styles="{ showVerticalGridLines:true, horizontalSpacing:10 }">
                <columns>
                    <TablePane.Column width="1*"/>
                    <TablePane.Column width="1*"/>
                </columns>

                <TablePane.Row height="1*">
                    <TablePane styles="{horizontalSpacing:10, showVerticalGridLines:true}">
                        <columns>
                            <TablePane.Column width="1*"/>
                            <TablePane.Column width="1*"/>
                        </columns>

                        <TablePane.Row height="1*">
                            <Form>
                                <Form.Section heading="From:">
                                    <ListView bxml:id="fromList" selectMode="single"
                                              listData="['MissingAirports']"/>
                                </Form.Section>
                            </Form>

                            <Form>
                                <Form.Section heading="To:">
                                    <BoxPane>
                                        <ListView bxml:id="toList" selectMode="single" listData="['MissingAirports']"/>
                                    </BoxPane>
                                </Form.Section>
                            </Form>
                        </TablePane.Row>
                    </TablePane>
                </TablePane.Row>
            </TablePane>
        </TablePane.Row>

        <!-- BUTTONS -->
        <TablePane.Row height="100">
            <BoxPane styles="{verticalAlignment:'center', horizontalAlignment:'center'}">
                <PushButton bxml:id="selectButton" buttonData="Select"/>
                <PushButton bxml:id="reloadButton" buttonData="Reload Airports"/>
            </BoxPane>
        </TablePane.Row>
    </TablePane>
</controllers:SelectionController>
